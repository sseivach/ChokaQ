@using ChokaQ.Abstractions
@using ChokaQ.Abstractions.Workers
@namespace ChokaQ.TheDeck.UI.Components.Settings

<section class="settings">
    
    <div class="settings__row">
        <label class="settings__label">WORKERS</label>
        <input type="number"
               class="settings__input"
               min="0"
               max="100"
               @bind="DesiredWorkers" />
        <span class="settings__info">(Active: @WorkerManager.ActiveWorkers)</span>
    </div>

    <div class="settings__row">
        <label class="settings__label">RETRIES</label>
        <select class="settings__select" @bind="MaxRetries">
            @for (int i = 1; i <= 10; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <div class="settings__row">
        <label class="settings__label">BASE DELAY (S)</label>
        <input type="number"
               class="settings__input"
               min="1"
               max="3600"
               @bind="RetryDelaySeconds" />
    </div>

    <div class="settings__actions">
        <button class="deck-btn deck-btn-primary" @onclick="ApplyChanges">
            Apply
        </button>
    </div>

</section>
