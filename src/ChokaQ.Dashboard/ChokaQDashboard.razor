@using ChokaQ.Dashboard.Components
@using ChokaQ.Dashboard.Models
@using Microsoft.AspNetCore.Components.Web

<HeadContent>
    <link rel="stylesheet" href="_content/ChokaQ.Dashboard/css/chokaq.css" />
</HeadContent>

<div class="cq-dashboard @CurrentThemeClass">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="mb-0 fw-bold">CHOKAQ MONITORING</h5>
        <small style="color: var(--cq-text-muted)">v1.0.0</small>
    </div>

    <DashboardStats Jobs="_jobs" />

    <DashboardSettings CurrentTheme="@_currentTheme"
                       OnSettingsApplied="HandleSettingsUpdated"
                       OnThemeChanged="HandleThemeChanged" />

    <JobFeed Jobs="_jobs"
             IsConnected="IsConnected"
             OnClearHistory="ClearHistory" />

</div>