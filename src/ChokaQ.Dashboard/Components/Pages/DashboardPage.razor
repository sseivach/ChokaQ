@page "/dashboard"
@using ChokaQ.Dashboard.Components.Features
@using ChokaQ.Dashboard.Components.Shared

<div class="dashboard-container @CurrentThemeClass">
    
    <div class="d-flex justify-content-between align-items-center mb-4 p-3 rounded shadow-sm"
         style="background-color: var(--cq-panel-bg); border: 1px solid var(--cq-border);">
        
        <div class="d-flex align-items-center gap-3">
            <h4 class="m-0 fw-bold">@Options.Title</h4>
            <span class="badge bg-secondary opacity-50">v1.0</span>
        </div>

        <div class="d-flex align-items-center gap-3">
            <ThemeSwitcher CurrentTheme="@_currentTheme" OnThemeChanged="HandleThemeChanged" />
        </div>
    </div>

    <JobFeed />
    
</div>

<style>
    /* Global Dashboard Layout Styles */
    .dashboard-container {
        padding: 1.5rem;
        min-height: 100vh;
        background-color: var(--cq-bg);
        color: var(--cq-text);
        transition: background-color 0.3s ease, color 0.3s ease;
    }
</style>