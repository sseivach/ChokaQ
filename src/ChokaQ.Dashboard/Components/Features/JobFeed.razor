@using ChokaQ.Dashboard.Models
@using ChokaQ.Abstractions.Enums
@using Microsoft.AspNetCore.SignalR.Client
@using ChokaQ.Dashboard.Components
@using Microsoft.AspNetCore.Components.Web.Virtualization

<StatsCard Jobs="Jobs" OnStatusSelected="SetStatusFilter" SelectedStatus="_activeStatusFilter" />

<div class="card cq-card shadow-sm h-100 d-flex flex-column mt-4">
    <div class="card-header py-2 d-flex justify-content-between align-items-center"
         style="background-color: var(--cq-panel-bg); border-bottom: 1px solid var(--cq-border);">

        <div class="d-flex align-items-center gap-2" style="flex: 1; max-width: 400px;">
            <div class="input-group input-group-sm">
                <span class="input-group-text" style="background-color: var(--cq-bg); border-color: var(--cq-border); color: var(--cq-text-muted);">
                    🔍
                </span>
                <input type="text" 
                       class="form-control cq-input" 
                       placeholder="Search by ID, Type or Content..." 
                       @bind="_searchQuery" 
                       @bind:event="oninput" />
                @if (!string.IsNullOrEmpty(_searchQuery))
                {
                    <button class="btn btn-outline-secondary" type="button" @onclick="() => _searchQuery = string.Empty">✖</button>
                }
            </div>
        </div>

        <div class="d-flex gap-3 align-items-center ms-auto">
             @if (SelectedCount > 0)
            {
                <span class="badge bg-primary fade-in">
                    @SelectedCount selected
                </span>
            }

            @if (IsConnected)
            {
                <span class="small fw-bold" style="color: var(--cq-success)">ONLINE</span>
            }
            else
            {
                <span class="small fw-bold" style="color: var(--cq-danger)">OFFLINE</span>
            }

            <button class="btn btn-sm btn-outline-secondary" @onclick="OnClearHistory">
                Clear
            </button>
        </div>
    </div>

    @if (SelectedCount > 0)
    {
        <div class="d-flex align-items-center gap-3 px-3 py-2 border-bottom" 
             style="background-color: var(--cq-bg); border-color: var(--cq-border) !important; animation: slideDown 0.2s;">
            <span class="small fw-bold text-muted">BULK ACTIONS:</span>
            
            <button class="btn btn-sm btn-outline-primary d-flex align-items-center gap-2" @onclick="RestartSelected">
                🔄 Restart (@SelectedCount)
            </button>
            
            <button class="btn btn-sm btn-outline-danger d-flex align-items-center gap-2" @onclick="CancelSelected">
                🛑 Cancel (@SelectedCount)
            </button>

             <button class="btn btn-sm btn-link text-decoration-none text-muted ms-auto" @onclick="ClearSelection">
                Deselect All
            </button>
        </div>
    }

    <div class="table-responsive flex-grow-1" style="min-height: 400px; height: 600px; overflow-y: auto;">
        <table class="cq-table">
            <thead style="position: sticky; top: 0; background-color: var(--cq-panel-bg); z-index: 10;">
                <tr>
                    <th style="width: 40px;" class="text-center">
                        <input type="checkbox" 
                               class="form-check-input darker-border-checkbox" 
                               checked="@IsAllVisibleSelected"
                               @onchange="ToggleSelectAll" />
                    </th>
                    <th style="width: 15%">ID</th>
                    <th style="width: 10%">User</th>
                    <th style="width: 15%">Type</th>
                    <th style="width: 15%">Started At</th>
                    <th style="width: 10%">Status</th>
                    <th style="width: 15%">Progress</th>
                    <th style="width: 5%">Att.</th>
                    <th style="width: 5%">Duration</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                <Virtualize Items="@FilteredJobs" Context="job" OverscanCount="10" ItemSize="42">
                    <ItemContent>
                        <JobRow @key="job.Id"
                                Job="job"
                                IsSelected="@_selectedJobIds.Contains(job.Id)"
                                OnSelectionChanged="@(isSelected => ToggleSelection(job.Id, isSelected))"
                                OnCancelRequested="HandleCancelRequest"
                                OnRestartRequested="HandleRestartRequest"
                                OnSelected="OpenInspector" />
                    </ItemContent>
                    <Placeholder>
                        <tr><td colspan="10" class="text-center py-2 text-muted">Loading...</td></tr>
                    </Placeholder>
                    <EmptyContent>
                        <tr>
                            <td colspan="10" class="text-center py-5" style="color: var(--cq-text-muted)">
                                @if(!string.IsNullOrEmpty(_searchQuery))
                                {
                                    <span>No jobs match your search "@_searchQuery".</span>
                                }
                                else
                                {
                                    <span>No jobs found in this status.</span>
                                }
                            </td>
                        </tr>
                    </EmptyContent>
                </Virtualize>
            </tbody>
        </table>
    </div>
</div>

<JobInspector @bind-IsVisible="_isInspectorVisible"
              JobId="@_selectedInspectorJobId"
              OnRestart="HandleRestartRequest"
              OnDelete="HandleDeleteRequest" />

<style>
    @("@keyframes slideDown { from { transform: translateY(-10px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }")
    .fade-in { animation: fadeIn 0.3s; }
</style>

@code {
    [Parameter] public List<JobViewModel> Jobs { get; set; } = new();
    [Parameter] public bool IsConnected { get; set; }
    [Parameter] public EventCallback OnClearHistory { get; set; }
    [Parameter] public HubConnection? HubConnection { get; set; }

    private bool _isInspectorVisible;
    private string? _selectedInspectorJobId; // Переименовал, чтобы не путать с чекбоксами
    
    // Filtering State
    private string _searchQuery = "";
    private JobStatus? _activeStatusFilter = null; // null = Show All

    // Selection State
    private HashSet<string> _selectedJobIds = new();
    private int SelectedCount => _selectedJobIds.Count;

    // Computed Filter Logic
    private ICollection<JobViewModel> FilteredJobs
    {
        get
        {
            IEnumerable<JobViewModel> query = Jobs;

            // 1. Status Filter
            if (_activeStatusFilter.HasValue)
            {
                query = query.Where(x => x.Status == _activeStatusFilter.Value);
            }

            // 2. Search Filter
            if (!string.IsNullOrWhiteSpace(_searchQuery))
            {
                var term = _searchQuery.Trim();
                query = query.Where(x => 
                    x.Id.Contains(term, StringComparison.OrdinalIgnoreCase) ||
                    x.Type.Contains(term, StringComparison.OrdinalIgnoreCase) ||
                    (x.CreatedBy != null && x.CreatedBy.Contains(term, StringComparison.OrdinalIgnoreCase))
                    // Payload search is expensive, add if needed: || x.Payload.Contains(term)
                );
            }

            return query.ToList();
        }
    }

    private void SetStatusFilter(JobStatus? status)
    {
        // Toggle logic: click same card twice -> clear filter
        if (_activeStatusFilter == status)
            _activeStatusFilter = null;
        else
            _activeStatusFilter = status;
            
        // Reset selection on filter change to avoid confusion
        _selectedJobIds.Clear();
    }

    // --- SELECTION LOGIC ---

    private void ToggleSelection(string jobId, bool isSelected)
    {
        if (isSelected) _selectedJobIds.Add(jobId);
        else _selectedJobIds.Remove(jobId);
    }

    private bool IsAllVisibleSelected => FilteredJobs.Any() && FilteredJobs.All(j => _selectedJobIds.Contains(j.Id));

    private void ToggleSelectAll(ChangeEventArgs e)
    {
        var isChecked = (bool)(e.Value ?? false);
        if (isChecked)
        {
            // Select only visible filtered jobs
            foreach (var job in FilteredJobs)
            {
                _selectedJobIds.Add(job.Id);
            }
        }
        else
        {
            _selectedJobIds.Clear();
        }
    }

    private void ClearSelection() => _selectedJobIds.Clear();


    // --- ACTIONS ---

    private async Task RestartSelected()
    {
        if (HubConnection is not null && IsConnected)
        {
            // Clone list to avoid modification errors during iteration
            var toProcess = _selectedJobIds.ToList();
            foreach (var id in toProcess)
            {
                await HubConnection.InvokeAsync("RestartJob", id);
            }
            _selectedJobIds.Clear();
        }
    }

    private async Task CancelSelected()
    {
        if (HubConnection is not null && IsConnected)
        {
            var toProcess = _selectedJobIds.ToList();
            foreach (var id in toProcess)
            {
                await HubConnection.InvokeAsync("CancelJob", id);
            }
            _selectedJobIds.Clear();
        }
    }

    // --- SINGLE ACTIONS ---
    
    private async Task HandleCancelRequest(string jobId)
    {
        if (HubConnection is not null && IsConnected)
             await HubConnection.InvokeAsync("CancelJob", jobId);
    }

    private async Task HandleRestartRequest(string jobId)
    {
        if (HubConnection is not null && IsConnected)
             await HubConnection.InvokeAsync("RestartJob", jobId);
    }

    private void OpenInspector(string jobId)
    {
        _selectedInspectorJobId = jobId;
        _isInspectorVisible = true;
    }

    private Task HandleDeleteRequest(string jobId)
    {
        _isInspectorVisible = false;
        return Task.CompletedTask;
    }
}