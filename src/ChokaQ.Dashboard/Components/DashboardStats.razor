@using ChokaQ.Abstractions.Enums
@using ChokaQ.Dashboard.Models

<div class="row mb-4 g-3">
    <div class="col-md-3">
        <div class="card cq-card shadow-sm h-100">
            <div class="card-body">
                <small class="text-uppercase" style="color: var(--cq-text-muted); font-size: 0.75rem;">Processing</small>
                <div class="fs-3 fw-bold mt-1" style="color: var(--cq-warning)">
                    @Jobs.Count(x => x.Status == JobStatus.Processing)
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card cq-card shadow-sm h-100">
            <div class="card-body">
                <small class="text-uppercase" style="color: var(--cq-text-muted); font-size: 0.75rem;">Succeeded</small>
                <div class="fs-3 fw-bold mt-1" style="color: var(--cq-success)">
                    @Jobs.Count(x => x.Status == JobStatus.Succeeded)
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card cq-card shadow-sm h-100">
            <div class="card-body">
                <small class="text-uppercase" style="color: var(--cq-text-muted); font-size: 0.75rem;">Failed</small>
                <div class="fs-3 fw-bold mt-1" style="color: var(--cq-danger)">
                    @Jobs.Count(x => x.Status == JobStatus.Failed)
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card cq-card shadow-sm h-100">
            <div class="card-body">
                <small class="text-uppercase" style="color: var(--cq-text-muted); font-size: 0.75rem;">Total Jobs</small>
                <div class="fs-3 fw-bold mt-1">
                    @Jobs.Count
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public ICollection<JobViewModel> Jobs { get; set; } = new List<JobViewModel>();
}